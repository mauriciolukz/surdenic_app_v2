<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/producto_card"
    style="@style/AppTheme.Card.Margins"
    app:cardCornerRadius="4dp"
    android:layout_width="fill_parent"
    android:layout_height="110dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:text="@string/producto_codigo"/>

            <TextView
                android:id="@+id/codigo_producto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="@string/producto"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/nombre_producto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginTop="4dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="@string/producto_empaque"/>

            <TextView
                android:id="@+id/empaque_producto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:paddingBottom="0dp"
                android:textSize="@dimen/text_size_normal"
                android:paddingTop="4dp"
                android:layout_marginStart="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="@string/producto_precio_venta"/>

            <TextView
                android:id="@+id/precio_producto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:paddingBottom="0dp"
                android:textSize="@dimen/text_size_normal"
                android:paddingTop="4dp"
                android:layout_marginStart="2dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/saldo_actual"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            />

    </LinearLayout>


</android.support.v7.widget.CardView>