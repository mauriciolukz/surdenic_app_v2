<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/factura_card"
    style="@style/AppTheme.Card.Margins"
    app:cardCornerRadius="4dp"
    android:layout_width="fill_parent"
    android:layout_height="155dp"
    app:cardBackgroundColor="@color/card_background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:text="@string/factura_numero"/>

                <TextView
                    android:id="@+id/num_factura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_marginTop="4dp"
                    android:text="@string/cliente_nombre"/>

                <TextView
                    android:id="@+id/fact_codigo_cliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_normal"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/fact_nombre_cliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_normal"
                    android:layout_marginTop="4dp"/>




            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="@string/factura_card_total_vendido"/>

                <TextView
                    android:id="@+id/total_vendido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:paddingBottom="0dp"
                    android:textSize="@dimen/text_size_normal"
                    android:paddingTop="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="@string/factura_card_monto_abonado"/>

                <TextView
                    android:id="@+id/monto_abonado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:paddingBottom="0dp"
                    android:textSize="@dimen/text_size_normal"
                    android:paddingTop="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="@string/factura_card_monto_pc"/>

                <TextView
                    android:id="@+id/monto_pc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:paddingBottom="0dp"
                    android:textSize="@dimen/text_size_normal"
                    android:paddingTop="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewStatusFactura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/useryellow" />

                <ImageView
                    android:id="@+id/imageViewStatusSync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@drawable/stopsinc" />

                <TextView
                    android:id="@+id/fecha_vence"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="15dp"
                    android:padding="5dp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>




</android.support.v7.widget.CardView>